<div class="main-body">
  <div class="list-heading">
    <a href="#/">Databases</a>
    <button class="new-button" {{action 'addDatabase'}}>+ New Database</button>
  </div>
  <div style="display:none;" id="newdb-create">Enter the Database name:<br /><br />
    {{input valueBinding="content.newDbName" size="30"}}</div>
  <table class="mainpage-table">
          <tr class="mainpage-table-row">
              <th>Database Name</th>
              <th>Collections</th>
              <th>Size (in GB)</th>
              <th>Indexes</th>
          </tr>
          {{#each content}}
          <tr class="mainpage-table-row">
            <td>{{#linkTo 'collections' name class="table-links"}}{{name}}{{/linkTo}}</td>
            <td>{{collection_count}}</td>
            <td>{{size}}</td>
            <td>{{indexes}}</td>
          </tr>
          {{/each}}
  </table>
  {{else}}
  <img src="/spinner.gif" alt="spinner" width="25px;" height="25px;" style="margin-left:480px;margin-top:180px;"></img>
  <p style="margin-left:460px;">Hang on ... </p>
</div>
<div class="footer">
</div>
