<div class="main-body">
  <div class="container">
	  <div class="list-heading">
      {{#link-to 'databases'}}Databases{{/link-to}}
      <button class="new-button" {{action 'addDocument'}}>+ New Document</button>
      <div class="arrow-right"></div>
    {{#link-to 'collections' controller.database}}{{controller.database}}{{/link-to}}
    <div class="arrow-right"></div>{{controller.collection}}</div>
  
    <ul>
      <li class="inline-search-box">
        <form {{action search on="submit"}} class="inline-form-search-box" title="syntax is: field : value, separate nested fields by a dot. For ObjectIds, just copy paste the id and hit return.">
          {{input valueBinding="searchtext" class="documents-search-box" placeholder="name : value" }}
        </form>
      </li>
      {{#unless searching}}
      <li class="position-text-indicator">
        Showing {{controller.visibleStartIndex}} - {{controller.visibleEndIndex}} of {{controller.count}} documents
      </li>
      {{/unless}}
    </ul>
    <div id="content">
      {{view Mongoman.DocumentsDisplayView class="document-list"}}
	   </div>
    <div class="drop-button-wrapper">
      <button class="drop-button" {{action 'dropCollection'}}>Drop Collection</button>
    </div>
    <div id="placeholder-confirm-drop-collection" style="display:none;"> Honestly ? </div>
    <div style="clear:both;"></div>
  
  {{#unless searching}}
    {{view Mongoman.PaginationView}}
  {{/unless}}
  
  <div id="placeholder-confirm" style="display:none;">
    Are you sure you want to delete this document?
  </div>
  <div id="dialog-form" style="display:none;">Add a new document to this collection:
    <div> {{textarea valueBinding="controller.newDocument" rows="12" cols="60"}}</div>
  </div>